<?xml version="1.0" encoding="utf-8"?>
<!--
    Custom fullscreen extract view for voice input mode.
    Replaces the default extract view when keyboard enters fullscreen mode.
    Contains a custom EditText for the user to view/edit text
    and a Submit button to commit changes back to the original text field.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF1A1A2E"
    android:padding="0dp">

    <!-- Top bar with title and submit button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#FF16213E">

        <TextView
            android:id="@+id/fullscreen_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Voice Input"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fullscreen_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:minWidth="72dp"
            android:text="Cancel"
            android:textColor="#FFFFFFFF"
            android:textSize="13sp"
            android:background="@android:color/transparent"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/fullscreen_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:minWidth="80dp"
            android:text="Submit"
            android:textColor="#FFFFFFFF"
            android:textSize="13sp"
            android:textStyle="bold"
            android:background="#FF0F3460"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />
    </LinearLayout>

    <!-- Divider line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF0F3460" />

    <!-- Custom text area for editing.
         Voice transcription text is inserted programmatically.
         The user can view and scroll the text, and use touch gestures
         (select, copy, paste) to edit. Keyboard key presses continue to
         flow through the InputConnection to the original field, so manual
         keyboard editing is not directly supported in this view.
         Text is committed back to the original field only when Submit is pressed. -->
    <EditText
        android:id="@+id/fullscreen_edit_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top|start"
        android:inputType="textMultiLine|textNoSuggestions"
        android:scrollbars="vertical"
        android:background="#FF1A1A2E"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#80FFFFFF"
        android:hint="Transcribed text will appear here..."
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.3"
        android:padding="16dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:longClickable="true" />

</LinearLayout>
