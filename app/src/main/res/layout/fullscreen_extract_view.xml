<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF101623"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fullscreen_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FF1A2336"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="6dp"
        android:paddingEnd="6dp">

        <Button
            android:id="@+id/fullscreen_minimize_button"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="#FF2E3A55"
            android:text="Minimize"
            android:textAllCaps="false"
            android:textColor="#FFFFFFFF"
            android:textSize="13sp" />

        <Button
            android:id="@+id/fullscreen_submit_button"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="#FF1C7A3A"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#FFFFFFFF"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fullscreen_cancel_button"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="#FF3B2A35"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#FFFFFFFF"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF2E3A55" />

    <android.inputmethodservice.ExtractEditText
        android:id="@android:id/inputExtractEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FF101623"
        android:cursorVisible="true"
        android:gravity="top|start"
        android:hint="Dictate or type..."
        android:inputType="textMultiLine"
        android:lineSpacingMultiplier="1.2"
        android:padding="14dp"
        android:scrollbars="vertical"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#80FFFFFF"
        android:textSize="16sp" />

    <Button
        android:id="@android:id/inputExtractAction"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>
